# 环境配置示例文件
# 复制此文件为 .env 并填写实际值

# ==================== 数据库配置 ====================
MYSQL_ROOT_PASSWORD=root123456
MYSQL_DATABASE=ai_creator
MYSQL_USER=ai_creator
MYSQL_PASSWORD=ai_creator123
DATABASE_URL=mysql+aiomysql://ai_creator:ai_creator123@localhost:3306/ai_creator

# ==================== Redis配置 ====================
REDIS_PASSWORD=redis123456
REDIS_URL=redis://:redis123456@localhost:6379/0

# ==================== 应用配置 ====================
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ENVIRONMENT=development
DEBUG=true
API_PREFIX=/api/v1

# ==================== JWT配置 ====================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== CORS配置 ====================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ==================== AI服务配置 ====================
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-opus-20240229

# 智谱AI
ZHIPU_API_KEY=your-zhipu-api-key
ZHIPU_MODEL=glm-4

# 百度文心
BAIDU_API_KEY=your-baidu-api-key
BAIDU_SECRET_KEY=your-baidu-secret-key
BAIDU_MODEL=ernie-bot-4

# 阿里通义
ALIYUN_API_KEY=your-aliyun-api-key
ALIYUN_MODEL=qwen-max

# 腾讯混元
TENCENT_SECRET_ID=your-tencent-secret-id
TENCENT_SECRET_KEY=your-tencent-secret-key
TENCENT_MODEL=hunyuan-lite

# ==================== 图片生成服务 ====================
# DALL-E
DALLE_API_KEY=sk-your-openai-api-key

# Midjourney (通过第三方API)
MIDJOURNEY_API_KEY=your-midjourney-api-key
MIDJOURNEY_BASE_URL=https://api.midjourney.com

# Stable Diffusion
SD_API_KEY=your-sd-api-key
SD_BASE_URL=https://api.stability.ai

# ==================== 视频生成服务 ====================
# Runway
RUNWAY_API_KEY=your-runway-api-key

# Pika
PIKA_API_KEY=your-pika-api-key

# ==================== 平台发布配置 ====================
# 微信公众号
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret

# 小红书
XIAOHONGSHU_APP_ID=your-xiaohongshu-app-id
XIAOHONGSHU_APP_SECRET=your-xiaohongshu-app-secret

# 抖音
DOUYIN_CLIENT_KEY=your-douyin-client-key
DOUYIN_CLIENT_SECRET=your-douyin-client-secret

# 快手
KUAISHOU_APP_ID=your-kuaishou-app-id
KUAISHOU_APP_SECRET=your-kuaishou-app-secret

# 今日头条
TOUTIAO_APP_ID=your-toutiao-app-id
TOUTIAO_APP_SECRET=your-toutiao-app-secret

# 百家号
BAIJIAHAO_APP_ID=your-baijiahao-app-id
BAIJIAHAO_APP_SECRET=your-baijiahao-app-secret

# 知乎
ZHIHU_CLIENT_ID=your-zhihu-client-id
ZHIHU_CLIENT_SECRET=your-zhihu-client-secret

# 简书
JIANSHU_TOKEN=your-jianshu-token

# ==================== 文件存储配置 ====================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,ppt,pptx

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_DIR=./logs

# ==================== 限流配置 ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ==================== Celery配置 ====================
CELERY_BROKER_URL=redis://:redis123456@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:redis123456@localhost:6379/2

# ==================== 邮件配置 ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=your-email@gmail.com

# ==================== 监控配置 ====================
SENTRY_DSN=your-sentry-dsn
